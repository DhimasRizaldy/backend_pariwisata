// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// create table user
model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  profile  Profile?
}

model Profile {
  id            Int    @id @default(autoincrement())
  nama          String
  jenis_kelamin String
  alamat        String
  foto_profile  String
  userId        Int    @unique
  pengguna          User   @relation(fields: [userId], references: [id])
}

