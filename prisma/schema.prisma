generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String?
  googleid    String?
  role        Role
  profile     Profile?
  rekomendasi Rekomendasi?
  ulasan      Ulasan[]
  wisata      Wisata[]
}

model Profile {
  id            Int     @id @default(autoincrement())
  userId        Int     @unique
  nama          String?
  jenis_kelamin String?
  alamat        String?
  foto_profile  String?
  user          User    @relation(fields: [userId], references: [id])
}

model Wisata {
  id          Int            @id @default(autoincrement())
  nama_wisata String
  kategoriId  Int
  daerahId    Int
  alamat      String
  deskripsi   String
  jam_operasi String
  harga_tiket String
  tanggal     DateTime
  userId      Int
  urlvideo    String
  foto_wisata String?
  rekomendasi Rekomendasi[]
  ulasan      Ulasan[]
  daerah      Daerah         @relation(fields: [daerahId], references: [id])
  kategori    KategoriWisata @relation(fields: [kategoriId], references: [id])
  user        User           @relation(fields: [userId], references: [id])
}

model KategoriWisata {
  id            Int      @id @default(autoincrement())
  nama_kategori String
  Wisata        Wisata[]
}

model Daerah {
  id          Int      @id @default(autoincrement())
  nama_daerah String
  Wisata      Wisata[]
}

model Rekomendasi {
  id           Int      @id @default(autoincrement())
  tanggal_vote DateTime
  userId       Int      @unique
  wisataId     Int
  user         User     @relation(fields: [userId], references: [id])
  wisata       Wisata   @relation(fields: [wisataId], references: [id])
}

model Ulasan {
  id             Int      @id @default(autoincrement())
  userId         Int
  wisataId       Int
  tanggal_ulasan DateTime
  judul          String
  isi_ulasan     String
  foto_ulasan    String
  user           User     @relation(fields: [userId], references: [id])
  wisata         Wisata   @relation(fields: [wisataId], references: [id])
}

enum Role {
  admin
  user
}
